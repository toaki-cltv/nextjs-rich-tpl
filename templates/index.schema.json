{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["templates"],
  "properties": {
    "templates": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "source"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "postCreate": { "type": "string" },
          "source": {
            "type": "object",
            "required": ["type"],
            "properties": {
              "type": { "type": "string", "enum": ["local", "git"] },
              "path": { "type": "string" },
              "repo": { "type": "string" },
              "ref": { "type": "string" },
              "timeout": { "type": "integer" },
              "hash": { "type": "string", "pattern": "^[0-9a-fA-F]{64}$" }
            }
          }
        }
      }
    }
  }
}
